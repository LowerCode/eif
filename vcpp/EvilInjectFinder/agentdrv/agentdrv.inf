;
; agentdrv.inf
;

[Version]
Signature="$WINDOWS NT$"
Class=Sample ; TODO: edit Class
ClassGuid={78A1C341-4539-11d3-B88D-00C04FAD5171} ; TODO: edit ClassGuid
Provider=%ManufacturerName%
CatalogFile=agentdrv.cat
DriverVer= ; TODO: set DriverVer in stampinf property pages

[DestinationDirs]
DefaultDestDir = 12

; ================= Class section =====================

[ClassInstall32]
Addreg=SampleClassReg

[SampleClassReg]
HKR,,,0,%ClassName%
HKR,,Icon,,-5

[SourceDisksNames]
1 = %DiskName%,,,""

[SourceDisksFiles]
agentdrv.sys  = 1,,

;*****************************************
; Install Section
;*****************************************

[Manufacturer]
%ManufacturerName%=Standard,NT$ARCH$

[Standard.NT$ARCH$]
%agentdrv.DeviceDesc%=agentdrv_Device, Root\agentdrv ; TODO: edit hw-id

[agentdrv_Device.NT]
CopyFiles=Drivers_Dir

[Drivers_Dir]
agentdrv.sys

;-------------- Service installation
[agentdrv_Device.NT.Services]
AddService = agentdrv,%SPSVCINST_ASSOCSERVICE%, agentdrv_Service_Inst

; -------------- agentdrv driver install sections
[agentdrv_Service_Inst]
DisplayName    = %agentdrv.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %12%\agentdrv.sys

;
;--- agentdrv_Device Coinstaller installation ------
;

[DestinationDirs]
agentdrv_Device_CoInstaller_CopyFiles = 11

[agentdrv_Device.NT.CoInstallers]
AddReg=agentdrv_Device_CoInstaller_AddReg
CopyFiles=agentdrv_Device_CoInstaller_CopyFiles

[agentdrv_Device_CoInstaller_AddReg]
HKR,,CoInstallers32,0x00010000, "WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll,WdfCoInstaller"

[agentdrv_Device_CoInstaller_CopyFiles]
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll

[SourceDisksFiles]
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll=1 ; make sure the number matches with SourceDisksNames

[agentdrv_Device.NT.Wdf]
KmdfService =  agentdrv, agentdrv_wdfsect
[agentdrv_wdfsect]
KmdfLibraryVersion = $KMDFVERSION$

[Strings]
SPSVCINST_ASSOCSERVICE= 0x00000002
ManufacturerName="<Your manufacturer name>" ;TODO: Replace with your manufacturer name
ClassName="Samples" ; TODO: edit ClassName
DiskName = "agentdrv Installation Disk"
agentdrv.DeviceDesc = "agentdrv Device"
agentdrv.SVCDESC = "agentdrv Service"
